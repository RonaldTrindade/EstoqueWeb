@page
@model EstoqueWeb.Pages.PageMovimentacoes.IndexModel
@{
    ViewData["Title"] = "Movimentações";
}

<div class="container-crud">
    <h1 class="mb-4 text-primary">Movimentações</h1>

    <p>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nova Movimentação
        </a>
    </p>

    <table class="table-crud">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.SaidaEntradaProduto[0].TipoOperacao)</th>
                <th>@Html.DisplayNameFor(model => model.SaidaEntradaProduto[0].Quantidade)</th>
                <th>@Html.DisplayNameFor(model => model.SaidaEntradaProduto[0].DataOperacao)</th>
                <th>@Html.DisplayNameFor(model => model.SaidaEntradaProduto[0].Produto)</th>
                <th>@Html.DisplayNameFor(model => model.SaidaEntradaProduto[0].Estoque)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SaidaEntradaProduto)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TipoOperacao)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantidade)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataOperacao)</td>
                    <td>@Html.DisplayFor(modelItem => item.Produto.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estoque.Localizacao)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-edit btn-action">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-details btn-action">
                            <i class="fas fa-info-circle"></i> Detalhes
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-delete btn-action">
                            <i class="fas fa-trash-alt"></i> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>