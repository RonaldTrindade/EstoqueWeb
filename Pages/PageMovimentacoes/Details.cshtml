@page
@model EstoqueWeb.Pages.PageMovimentacoes.DetailsModel
@{
    ViewData["Title"] = "Detalhes da Movimentação";
}

<div class="container-crud">
    <h1 class="mb-4 text-primary">Detalhes da Movimentação</h1>

    @if (Model.SaidaEntradaProduto == null)
    {
        <div class="alert alert-danger">
            <p>Movimentação não encontrada.</p>
        </div>
    }
    else
    {
        <div class="card-crud">
            <h4>@Model.SaidaEntradaProduto.TipoOperacao</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Tipo de Operação</dt>
                <dd class="col-sm-9">@Model.SaidaEntradaProduto.TipoOperacao</dd>

                <dt class="col-sm-3">Quantidade</dt>
                <dd class="col-sm-9">@Model.SaidaEntradaProduto.Quantidade</dd>

                <dt class="col-sm-3">Data da Operação</dt>
                <dd class="col-sm-9">@Model.SaidaEntradaProduto.DataOperacao</dd>

                <dt class="col-sm-3">Produto</dt>
                <dd class="col-sm-9">@Model.SaidaEntradaProduto.Produto?.Nome</dd>

                <dt class="col-sm-3">Estoque</dt>
                <dd class="col-sm-9">@Model.SaidaEntradaProduto.Estoque?.Localizacao</dd>
            </dl>

            <div class="mt-4">
                <a asp-page="./Edit" asp-route-id="@Model.SaidaEntradaProduto.Id" class="btn btn-edit">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
        </div>
    }
</div>