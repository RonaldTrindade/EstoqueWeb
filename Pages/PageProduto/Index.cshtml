@page
@model EstoqueWeb.Pages.PageProduto.IndexModel
@{
    ViewData["Title"] = "Produtos";
}

<div class="container-crud">
    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-temporaria show" role="alert">
            @TempData["Sucesso"]
        </div>
    }
    <h1 class="mb-4 text-primary">Produtos</h1>

    <p>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Novo Produto
        </a>
    </p>

    <table class="table-crud">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Produto[0].Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Produto[0].Descricao)</th>
                <th>@Html.DisplayNameFor(model => model.Produto[0].QuantidadeDisponivel)</th>
                <th>@Html.DisplayNameFor(model => model.Produto[0].Estoque)</th>
                <th>@Html.DisplayNameFor(model => model.Produto[0].Estoque.Localizacao)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Produto)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                    <td>@Html.DisplayFor(modelItem => item.QuantidadeDisponivel)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estoque.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estoque.Localizacao)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-edit btn-action">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-details btn-action">
                            <i class="fas fa-info-circle"></i> Detalhes
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-delete btn-action">
                            <i class="fas fa-trash-alt"></i> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>