@page
@model EstoqueWeb.Pages.PageProduto.DetailsModel
@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="container-crud">
    <h1 class="mb-4 text-primary">Detalhes do Produto</h1>

    @if (Model.Produto == null)
    {
        <div class="alert alert-danger">
            <p>Produto não encontrado.</p>
        </div>
    }
    else
    {
        <div class="card-crud">
            <h4>@Model.Produto.Nome</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Model.Produto.Nome</dd>

                <dt class="col-sm-3">Descrição</dt>
                <dd class="col-sm-9">@Model.Produto.Descricao</dd>

                <dt class="col-sm-3">Quantidade Disponível</dt>
                <dd class="col-sm-9">@Model.Produto.QuantidadeDisponivel</dd>

                <dt class="col-sm-3">Estoque</dt>
                <dd class="col-sm-9">@(Model.Produto.Estoque?.Nome ?? "Nenhum estoque associado")</dd>

                <dt class="col-sm-3">Localização</dt>
                <dd class="col-sm-9">@Model.Produto.Estoque?.Localizacao</dd>
            </dl>

            <div class="mt-4">
                <a asp-page="./Edit" asp-route-id="@Model.Produto.Id" class="btn btn-edit">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
        </div>
    }
</div>