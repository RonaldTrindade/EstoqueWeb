@page
@model EstoqueWeb.Pages.PageProduto.DeleteModel
@{
    ViewData["Title"] = "Excluir Produto";
}

<div class="container-crud">
    <h1 class="mb-4 text-primary">Excluir Produto</h1>

    <div class="alert alert-warning">
        <h3>Tem certeza que deseja excluir este produto?</h3>
    </div>

    <div class="card-crud">
        <h4>@Model.Produto.Nome</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Produto.Nome</dd>

            <dt class="col-sm-3">Descrição</dt>
            <dd class="col-sm-9">@Model.Produto.Descricao</dd>

            <dt class="col-sm-3">Quantidade Disponível</dt>
            <dd class="col-sm-9">@Model.Produto.QuantidadeDisponivel</dd>

            <dt class="col-sm-3">Estoque</dt>
            <dd class="col-sm-9">@Model.Produto.Estoque.Localizacao</dd>
        </dl>

        <form method="post" class="mt-4">
            <input type="hidden" asp-for="Produto.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Excluir
            </button>
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </form>
    </div>
</div>