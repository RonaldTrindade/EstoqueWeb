@page
@model EstoqueWeb.Pages.PageUsuario.EditModel
@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="container-crud">
    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-temporaria show" role="alert">
            @TempData["Sucesso"]
        </div>
    }
    <h1 class="mb-4 text-primary">Editar Usuário</h1>

    <div class="row">
        <div class="col-md-6">
            <form method="post" class="form-crud">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Usuario.Id" />

                <div class="form-group">
                    <label asp-for="Usuario.Nome" class="font-weight-bold">Nome <span class="text-danger">*</span></label>
                    <input asp-for="Usuario.Nome" class="form-control" placeholder="Digite o nome" />
                    <span asp-validation-for="Usuario.Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Usuario.Email" class="font-weight-bold">Email <span class="text-danger">*</span></label>
                    <input asp-for="Usuario.Email" class="form-control" placeholder="Digite o email" />
                    <span asp-validation-for="Usuario.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Salvar
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}