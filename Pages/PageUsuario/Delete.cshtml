@page
@model EstoqueWeb.Pages.PageUsuario.DeleteModel
@{
    ViewData["Title"] = "Excluir Usuário";
}

<div class="container-crud">
    <h1 class="mb-4 text-primary">Excluir Usuário</h1>

    <div class="alert alert-warning">
        <h3>Tem certeza que deseja excluir este usuário?</h3>
    </div>

    <div class="card-crud">
        <h4>@Model.Usuario.Nome</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Usuario.Nome</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Usuario.Email</dd>
        </dl>

        <form method="post" class="mt-4">
            <input type="hidden" asp-for="Usuario.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Excluir
            </button>
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </form>
    </div>
</div>