@page
@model EstoqueWeb.Pages.PageUsuario.CreateModel
@{
    ViewData["Title"] = "Novo Usuário";
}

<div class="container-crud">
    <h1 class="mb-4 text-primary">Novo Usuário</h1>

    <form method="post" class="form-crud">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-group">
            <label asp-for="Usuario.Nome">Nome <span class="text-danger">*</span></label>
            <input asp-for="Usuario.Nome" class="form-control" placeholder="Digite o nome" />
            <span asp-validation-for="Usuario.Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Usuario.Email">Email <span class="text-danger">*</span></label>
            <input asp-for="Usuario.Email" class="form-control" placeholder="Digite o email" />
            <span asp-validation-for="Usuario.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-submit">
                <i class="fas fa-save"></i> Salvar
            </button>
            <a asp-page="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}