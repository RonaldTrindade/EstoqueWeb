@page
@model EstoqueWeb.Pages.PageEstoqueProduto.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>EstoqueProduto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Erros encontrados:</strong>
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="EstoqueProduto.Nome" class="control-label"></label>
                <input asp-for="EstoqueProduto.Nome" class="form-control" />
                <span asp-validation-for="EstoqueProduto.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="EstoqueProduto.Localizacao" class="control-label"></label>
                <input asp-for="EstoqueProduto.Localizacao" class="form-control" />
                <span asp-validation-for="EstoqueProduto.Localizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstoqueProduto.UsuarioId" class="control-label"></label>
                <select asp-for="EstoqueProduto.UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId">
                    <option value="">Selecione um usuário</option>
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
