@page
@model EstoqueWeb.Pages.PageEstoqueProduto.DetailsModel
@{
    ViewData["Title"] = "Detalhes do Estoque";
}

<div class="container-crud">
    <h1 class="mb-4 text-primary">Detalhes do Estoque</h1>

    @if (Model.EstoqueProduto == null)
    {
        <div class="alert alert-danger">
            <p>Estoque não encontrado.</p>
        </div>
    }
    else
    {
        <div class="card-crud">
            <h4>@Model.EstoqueProduto.Nome</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Model.EstoqueProduto.Nome</dd>

                <dt class="col-sm-3">Localização</dt>
                <dd class="col-sm-9">@Model.EstoqueProduto.Localizacao</dd>

                <dt class="col-sm-3">Usuário</dt>
                <dd class="col-sm-9">@Model.EstoqueProduto.Usuario?.Email</dd>
            </dl>

            <div class="mt-4">
                <a asp-page="./Edit" asp-route-id="@Model.EstoqueProduto.Id" class="btn btn-edit">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
        </div>
    }
</div>