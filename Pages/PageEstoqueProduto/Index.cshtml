@page
@model EstoqueWeb.Pages.PageEstoqueProduto.IndexModel
@{
    ViewData["Title"] = "Estoques de Produtos";
}

<div class="container-crud">
    <h1 class="mb-4 text-primary">Estoques de Produtos</h1>

    <p>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Novo Estoque
        </a>
    </p>

    <table class="table-crud">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.EstoqueProduto[0].Nome)</th>
                <th>@Html.DisplayNameFor(model => model.EstoqueProduto[0].Localizacao)</th>
                <th>@Html.DisplayNameFor(model => model.EstoqueProduto[0].Usuario)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.EstoqueProduto)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Localizacao)</td>
                    <td>@Html.DisplayFor(modelItem => item.Usuario.Email)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-edit btn-action">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-details btn-action">
                            <i class="fas fa-info-circle"></i> Detalhes
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-delete btn-action">
                            <i class="fas fa-trash-alt"></i> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>